{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": "./",
    "outDir": "./build",
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["DOM"],
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
